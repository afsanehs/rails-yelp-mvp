<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @restaurant.name %>
</p>

<p>
  <strong>Address:</strong>
  <%= @restaurant.address %>
</p>

<p>
  <strong>Reviews</strong>
</p>


<ul>
  <% @restaurant.reviews.each do |review| %>
    <li><%= review.rating %></li>
    <li><%= review.content %></li>
  <% end %>
</ul>

<%= link_to "add new review", new_restaurant_review_path(@restaurant) %>
